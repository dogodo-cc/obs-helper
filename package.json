{
    "name": "obs-helper",
    "version": "1.0.0",
    "private": true,
    "description": "Upload/Download files or folders to Huawei Cloud OBS.",
    "main": "lib/main.js",
    "scripts": {
        "build": "tsc",
        "package": "ncc build -m --license licenses.txt",
        "format": "prettier --write \"src/*.{ts,tsx}\"",
        "format-check": "prettier --check \"src/*.{ts,tsx}\"",
        "test": "jest",
        "lint": "eslint src  --ext .ts",
        "all": "npm run format && npm run lint && npm run build && npm run package"
    },
    "keywords": [
        "actions",
        "obs",
        "helper"
    ],
    "dependencies": {
        "@actions/core": "^1.8.2",
        "esdk-obs-nodejs": "^3.21.6"
    },
    "devDependencies": {
        "@types/jest": "^27.5.1",
        "@types/mime": "^2.0.3",
        "@types/node": "^20.2.3",
        "@typescript-eslint/eslint-plugin": "^5.19.0",
        "@typescript-eslint/parser": "^5.19.0",
        "@vercel/ncc": "^0.31.1",
        "babel-eslint": "^10.1.0",
        "eslint": "^7.32.0",
        "eslint-config-bevry": "^3.27.0",
        "eslint-plugin-mocha": "^9.0.0",
        "jest": "^28.1.0",
        "prettier": "2.6.2",
        "proxy-agent": "^5.0.0",
        "ts-jest": "^28.0.3",
        "typescript": "^4.7.2"
    }
}
